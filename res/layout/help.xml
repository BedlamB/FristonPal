<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:gravity="center_horizontal"
             >

    <TextView android:id="@+id/main_title" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:layout_marginBottom="10dp"
              android:layout_marginTop="25dp" android:gravity="center" android:text="@string/help_text"

              />

    <Button android:id="@+id/help_ok" android:layout_width="200dp"
            android:layout_height="wrap_content" android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" android:background="@drawable/button_small"
            style="@style/buttonFont" android:text="OK" />

</LinearLayout>
